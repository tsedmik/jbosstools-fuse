<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mappings xmlns="http://dozermapper.github.io/schema/bean-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://dozermapper.github.io/schema/bean-mapping https://dozermapper.github.io/schema/bean-mapping.xsd">
    <configuration>
        <wildcard>false</wildcard>
        <variables>
            <variable name="ORIGIN">web</variable>
        </variables>
    </configuration>
    <mapping>
        <class-a>generated_1524555767858.ABCOrder</class-a>
        <class-b>xyzorder.XyzOrder</class-b>
        <field>
            <a>header.orderNum</a>
            <b>orderId</b>
        </field>
        <field>
            <a>header.status</a>
            <b>priority</b>
        </field>
        <field>
            <a>orderItems.item</a>
            <b>lineItems</b>
        </field>
        <field custom-converter-id="_customMapping" custom-converter-param="example.MyFunction,map">
            <a>header.customerNum</a>
            <b>custId</b>
        </field>
    </mapping>
    <mapping>
        <class-a>generated_1524555767858.ABCOrder$OrderItems$Item</class-a>
        <class-b>xyzorder.LineItem</class-b>
        <field>
            <a>id</a>
            <b>itemId</b>
        </field>
        <field>
            <a>price</a>
            <b>cost</b>
        </field>
        <field>
            <a>quantity</a>
            <b>amount</b>
        </field>
    </mapping>
    <mapping>
        <class-a>org.apache.camel.component.dozer.VariableMapper</class-a>
        <class-b>xyzorder.XyzOrder</class-b>
        <field custom-converter-id="_variableMapping" custom-converter-param="${ORIGIN}">
            <a>literal</a>
            <b>origin</b>
        </field>
    </mapping>
    <mapping>
        <class-a>org.apache.camel.component.dozer.ExpressionMapper</class-a>
        <class-b>xyzorder.XyzOrder</class-b>
        <field custom-converter-id="_expressionMapping" custom-converter-param="header:approvalID">
            <a>expression</a>
            <b>approvalCode</b>
        </field>
    </mapping>
</mappings>
